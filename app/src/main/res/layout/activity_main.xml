<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/etScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter scale (default 10)"
            android:inputType="number" />
        
        <EditText
            android:id="@+id/etLatex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter LaTeX formula" />

        <Button
            android:id="@+id/btnRender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Render Formula" />

        <Button
            android:id="@+id/btnSavedFormulas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Saved Formulas" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>